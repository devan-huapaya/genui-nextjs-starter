{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "preserve",
		"sourceMap": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"pages/*": ["src/pages/*"],
			"__tests__/*": ["tests/__tests__/*"],
			"__mocks__/*": ["tests/__mocks__/*"],
			"styles/*": ["src/styles/*"],
			"components/*": ["src/components/*"],
			"layouts/*": ["src/components/layouts*"],
			"ui/*": ["src/components/widgets*"],
			"public/*": ["src/public/*"],
			"hooks/*": ["src/hooks/*"]
		}
	},
	"include": ["src", "node_modules/@types", "__tests__/**/**.ts", "__tests__/**/**.tsx"],
	"exclude": ["node_modules"]
}
